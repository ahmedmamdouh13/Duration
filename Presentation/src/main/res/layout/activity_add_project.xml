<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/container_linearlayout_addprojectactivity"
    tools:context=".view.AddProjectActivity"
    android:background="@drawable/color_fade_drawable"
    >
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:id="@+id/fab_addtask_addprojectactivity"
        android:layout_margin="@dimen/material_size_16"
        android:src="@drawable/ic_work_black_24dp"
        app:layout_anchor="@id/appbar_addprojectactivity"
        app:layout_anchorGravity="end|bottom"
        />
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/appbar_addprojectactivity"
        android:background="@drawable/color_fade_drawable"

        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/color_fade_drawable"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:id="@+id/title_edittext_addprojcectactivity"
            android:maxLines="1"
            android:hint="Project Title"
            android:maxLength="20"
            android:gravity="center"
            android:textSize="@dimen/material_size_24"
            android:layout_gravity="center"
            />
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        >

        <include layout="@layout/item_task"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />
        <include layout="@layout/item_task"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />
        <include layout="@layout/item_task"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />
    </LinearLayout>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
        android:visibility="gone"


            >
<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/ic_work_transparent24dp"
    android:layout_centerInParent="true"
    android:id="@+id/placeholder_imageview_addprojectactivity"
    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/placeholder_imageview_addprojectactivity"
            android:text="Add Tasks To Your Project"
            />
            </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="dd/mm/yyyy"
        android:layout_margin="@dimen/material_size_16"
        android:layout_gravity="bottom|end"
        android:id="@+id/date_addprojectactivity"

        />

